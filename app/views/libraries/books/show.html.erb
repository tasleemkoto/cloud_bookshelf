<div class="container-fluid dashboard py-4">
  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <!-- Back Button -->
  <%= link_to "Back to Libraries", libraries_path, class: 'btn btn-secondary mb-4' %>

  <h1 class="text-center mb-3">Explore: <span class="text-primary"><%= @book.title %></span></h1>

  <!-- Book Info Section -->
  <div class="row mb-5">
    <!-- Book Image -->
    <div class="col-md-4">
      <div class="book-image text-center">
        <% if @book.photo.attached? %>
          <%= image_tag @book.photo, alt: @book.title, class: "img-fluid rounded shadow" %>
        <% elsif @random_image %>
          <%= image_tag @random_image, alt: "Random Book Cover", class: "img-fluid rounded shadow" %>
        <% else %>
          <p>No cover available</p>
        <% end %>
      </div>
    </div>

    <!-- Book Details -->
    <div class="col-md-5">
      <ul class="list-unstyled">
        <p><strong>ğŸ“– Author:</strong> <%= @book.author %></p>
        <p><strong>ğŸ­ Genre:</strong> <%= @book.genre %></p>
        <p><strong>ğŸ“… Year:</strong> <%= @book.year %></p>
        <p><strong>ğŸ“‚ Format:</strong> <%= @book.format.capitalize %></p>
        <p><strong>ğŸ“˜ Status:</strong> <%= @book.status%></p>
        <p><strong>ğŸ“ Summary:</strong> <%= @book.summary %></p>
        <p><strong>ğŸ“ Location:</strong> <%= @book.location %></p>
        <p><strong>ğŸ“• Availability:</strong> <%= @book.availability ? "Available" : "Not Available" %></p>
      </ul>
    </div>


    <!-- QR Code and Wishlist -->
      <% if @book.format == "hardcover" && @book.qr_code.present? %>
        <div class="d-flex flex-column align-items-center gap-3 mt-4">
          <div>
            <h5>QR Code</h5>
            <%= raw RQRCode::QRCode.new(@book.qr_code).as_svg(
              module_size: 3,
              color: "000",
              shape_rendering: "crispEdges",
              standalone: true
            ) %>
          </div>
          <div class="mt-3 d-flex flex-column align-items-center gap-2">
            <%= link_to 'â¤ï¸ Add to Wishlist', library_wishlists_path(@library),
                        method: :post,
                        class: 'btn btn-outline-primary btn-block btn-sm' %>
            <%= link_to 'ğŸ“¥ Download QR', qr_code_download_library_book_path(@library, @book),
                        class: 'btn btn-primary btn-block btn-sm' %>
          </div>
        </div>
      <% elsif @book.format == "ebook" && @book.pdf.attached? %>
        <!-- Online Reading Option -->
        <%= link_to "Read Online", read_library_book_path(@book.library, @book),
                    class: "btn btn-primary btn-sm mt-3" %>
      <% else %>
        <p class="text-muted">This book is not available for online reading.</p>
      <% end %>
    </div>
    <% if @book.reservable? %>
      <%= button_to 'Reserve Book', checkouts_path(checkout: { book_id: @book.id, user_id: current_user.id, library_id: @library.id }),
                    method: :post, class: 'btn btn-success btn-sm', data: { confirm: 'Do you want to reserve this book?' } %>
    <% else %>
      <p class="text-muted">
        This book is not available for reservation.
        <% if @book.status != "available" %>
          Reason: The book is not available (status: <%= @book.status %>).
        <% elsif @book.quantity <= 0 %>
          Reason: No copies available.
        <% elsif @book.checkouts.pending.exists? %>
          Reason: There is already a pending reservation.
        <% end %>
      </p>
    <% end %>




  <!-- Reviews Section -->
  <div class="reviews-section mb-5">
    <h3 class="mb-4"><i class="fas fa-star"></i> Reader Reviews</h3>

    <!-- Reviews List -->
    <% if @reviews.any? %>
      <div class="mb-4">
        <ul class="list-group">
          <% @reviews.each do |review| %>
            <li id="<%= dom_id(review) %>" class="list-group-item">
              <p><strong>Rating:</strong> <i class="fas fa-star"></i> <%= review.rating %> / 5</p>
              <p><strong>Comment:</strong> "<%= review.comment %>"</p>
              <p><strong>By:</strong> <%= review.user.email %></p>
              <% if policy(review).destroy? %>
                <%= button_to 'Delete Review', library_book_review_path(@library, @book, review),
                              method: :delete,
                              form: { data: { turbo_confirm: 'Are you sure?' } },
                              class: 'btn btn-danger btn-sm mt-2' %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <%= paginate @reviews %>
      </div>
    <% else %>
      <p class="text-muted text-center">No reviews yet. Be the first to share your thoughts!</p>
    <% end %>

    <!-- Write a Review -->
    <h4 class="mt-4">Add Your Review</h4>
    <div class="d-flex justify-content-center">
      <div class="col-md-12">
        <% if user_signed_in? %>
          <%= form_with model: [@library, @book, @book.reviews.new], local: true do |f| %>
            <div class="mb-3">
              <%= f.label :rating, "Rating (1-5)", class: "form-label" %>
              <%= f.select :rating, options_for_select(1..5), {}, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :comment, "Your Comment", class: "form-label" %>
              <%= f.text_area :comment, rows: 3, class: "form-control" %>
            </div>
            <%= f.submit "Submit Review", class: "btn btn-success btn-sm mt-3" %>
          <% end %>
        <% else %>
          <p class="text-center">Please <%= link_to "sign in", new_user_session_path %> to leave a review.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
