<div class="container book-details">
  <!-- Book Title and Basic Information -->
  <h1 class="display-4 text-center mb-4">Explore: <span class="text-primary"><%= @book.title %></span></h1>

  <!-- Book Info Section -->
  <div class="book-info mb-4">
    <div class="row">
      <!-- Book Image Section -->
      <div class="col-md-4">
        <div class="book-image">
          <div class="book-cover">
            <% if @book.photo.attached? %>
              <%= cl_image_tag @book.photo.key, alt: @book.title, class: "cover-image" %>
            <% elsif @random_image %>
              <%= image_tag @random_image, alt: "Random Book Cover", class: "cover-image" %>
            <% else %>
              <p>No cover available</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Book Details Section -->
      <div class="col-md-4">
        <div class="book-title">
          <p><%= @book.photo.key %></p>
          <p><strong>ğŸ“– Author:</strong> <%= @book.author %></p>
          <p><strong>ğŸ­ Genre:</strong> <%= @book.genre %></p>
          <p><strong>ğŸ“… Year:</strong> <%= @book.year %></p>
          <p><strong>ğŸ“‚ Format:</strong> <%= @book.format.capitalize %></p>
          <p><strong>ğŸ“˜ Status:</strong> <%= @book.status.humanize %></p>
          <p><strong>ğŸ“ Summary:</strong> <%= @book.summary %></p>
          <p><strong>ğŸ“ Location:</strong> <%= @book.location %></p>
          <p><strong>ğŸ“• Availability:</strong> <%= @book.availability ? "Available" : "Not Available" %></p>
        </div>
      </div>

      <!-- Reserve and Wishlist Button Section -->
      <div class="col-md-4 d-flex flex-column align-items-center">
        <% if policy(@book).reserve? %>
          <%= link_to "Reserve Now", library_checkouts_path(@library, @book), data: { turbo_method: :post }, class: 'btn btn-success mb-3' %>
        <% end %>

        <% if user_signed_in? && policy(@library).create? %>
          <%= button_to 'â¤ï¸ Add to Wishlist', library_wishlists_path(@library, book_id: @book.id), method: :post, class: 'btn btn-outline-primary mb-3', data: { turbo: 'false' } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Rating and Review Section -->
  <h3 class="text-center my-4">â­ Reader Reviews</h3>

  <!-- Rating and Comment Row -->
  <div class="row">
    <!-- Rating Section -->
    <div class="col-md-6">
      <% if @reviews.any? %>
        <ul class="reviews-list">
          <% @reviews.each do |review| %>
            <li id="<%= dom_id(review) %>" class="review-item">
              <p><strong>Rating:</strong> ğŸŒŸ <%= review.rating %> / 5</p>
              <p><strong>Comment:</strong> "<%= review.comment %>"</p>
              <p><strong>By:</strong> <%= review.user.email %></p>
              <% if policy(review).destroy? %>
                <%= button_to 'ğŸ—‘ï¸ Delete Review', library_book_review_path(@library, @book, review),
                              method: :delete,
                              form: { data: { turbo_confirm: 'Are you sure?' } },
                              class: 'btn btn-danger btn-sm' %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No reviews for this book yet. Be the first to share your thoughts!</p>
      <% end %>
    </div>

    <!-- Write a Review -->
    <h4 class="text-center mt-4">Add Your Review</h4>
    <div class="d-flex justify-content-center">
      <div class="col-md-8">
        <% if user_signed_in? %>
          <%= form_with model: [@library, @book, @book.reviews.new], local: true do |f| %>
            <div class="form-group mb-3">
              <%= f.label :rating, "Rating (1-5)", class: "form-label" %>
              <%= f.select :rating, options_for_select(1..5), {}, class: "form-control" %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :comment, "Your Comment", class: "form-label" %>
              <%= f.text_area :comment, rows: 3, class: "form-control" %>
            </div>
            <%= f.submit "Submit Review", class: "btn btn-success btn-sm mt-3" %>
          <% end %>
        <% else %>
          <p class="text-center">Please <%= link_to "sign in", new_user_session_path %> to leave a review.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <p class="alert alert-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="alert alert-danger"><%= flash[:alert] %></p>
  <% end %>
</div>
